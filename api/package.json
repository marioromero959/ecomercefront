    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "mercadopago": "^2.9.0",
    "morgan": "^1.10.0",
    "mssql": "^10.0.1",
    "multer": "^1.4.5-lts.1",
    "sequelize": "^6.35.2",
    "socket.io": "^4.8.1",
    "tedious": "^16.6.1"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/mercadopago": "^1.5.11",
    "@types/morgan": "^1.9.9",
    "@types/mssql": "^9.1.5",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.10.5",
    "@types/tedious": "^4.0.14",
    "nodemon": "^3.0.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
