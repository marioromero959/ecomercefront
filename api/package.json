{
  "name": "ecommerce-backend",
  "version": "1.0.0",
  "description": "E-commerce backend API with Node.js, TypeScript and SQL Server",
  "main": "dist/app.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only --exit-child src/app.ts",
